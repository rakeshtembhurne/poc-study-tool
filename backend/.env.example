# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=Super Memo
APP_VERSION=0.1.0
API_PREFIX=api/v1
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Module Feature Flags for Study Tool
MODULES_NOTIFICATIONS_ENABLED=true
MODULES_REMINDERS_ENABLED=true
MODULES_PROGRESS_REPORTS_ENABLED=true
MODULES_STUDY_SESSIONS_ENABLED=true
MODULES_SPACED_REPETITION_ENABLED=true
MODULES_ANALYTICS_ENABLED=true
MODULES_GAMIFICATION_ENABLED=false

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=studytool
POSTGRES_PASSWORD=studytool123
POSTGRES_DB=study_tool_db
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SSL=false

# Prisma Database URLs
DATABASE_URL=postgresql://studytool:studytool123@localhost:5432/study_tool_db
DIRECT_DATABASE_URL=postgresql://studytool:studytool123@localhost:5432/study_tool_db

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=study_tool_analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=""

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_TTL=3600
REDIS_MAX_RETRIES=3
SESSION_TIMEOUT=3600
MAX_SESSIONS_PER_USER=5

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=study-tool-backend
KAFKA_GROUP_ID=study-tool-group
KAFKA_CONNECTION_TIMEOUT=3000
KAFKA_RETRIES=5
KAFKA_REMINDER_TOPIC=reminder-topic
KAFKA_NOTIFICATION_TOPIC=notification-topic
KAFKA_PROGRESS_TOPIC=progress-topic
KAFKA_SESSION_TOPIC=study-session-topic
KAFKA_ANALYTICS_TOPIC=analytics-topic
KAFKA_STUDY_COMPLETED_TOPIC=study.session.completed
KAFKA_REMINDER_FAILED_TOPIC=reminder.failed

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# API Security
API_KEY_HEADER=x-api-key
BCRYPT_ROUNDS=10

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true