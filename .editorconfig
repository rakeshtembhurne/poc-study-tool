# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript, JavaScript, and JSON files
[*.{ts,tsx,js,jsx,json}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Prisma schema files
[*.prisma]
indent_size = 2

# Package.json and similar files
[package*.json]
indent_size = 2

# Docker files
[{Dockerfile,docker-compose*.yml}]
indent_size = 2

# Configuration files
[*.{eslintrc,prettierrc}]
indent_size = 2